// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
  "name": "Node.js & TypeScript",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/typescript-node:0-18",

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [3000],

  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "git config --global credential.helper manager-core && chmod 777 /workspace && git clone https://github.com/WhaleTaleDesigns/app.git /workspace && cd /workspace/app && fish /workspace/app/.devcontainer/install-dev-tools.fish",
  // Features to add to the dev container. More info: https://containers.dev/features.
  "features": {
    "ghcr.io/devcontainers-contrib/features/pnpm:2": {
      "version": "latest"
    },
    "ghcr.io/meaningful-ooo/devcontainer-features/fish:1": {
      "fisher": true
    },
    "ghcr.io/stuartleeks/dev-container-features/shell-history:0": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-contrib/features/pipx-package:1": {
      "package": "black",
      "version": "latest",
      "interpreter": "python3"
    }
  },
  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": [
        "gurayyarar.editorenhancements",
        "KnisterPeter.vscode-commitizen",
        "bibhasdn.unique-lines",
        "bradlc.vscode-tailwindcss",
        "yoavbls.pretty-ts-errors",
        "rvest.vs-code-prettier-eslint",
        "esbenp.prettier-vscode",
        "Tyriar.lorem-ipsum",
        "VisualStudioExptTeam.intellicode-api-usage-examples",
        "VisualStudioExptTeam.vscodeintellicode",
        "Asuka.insertnumbers",
        "eamodio.gitlens",
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "workspaceMount": "source=workspace-volume,target=/workspace,type=volume",
  "workspaceFolder": "/workspace",
  "remoteUser": "root"
}
